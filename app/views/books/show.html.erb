
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<tbody>
					<td>
						<%= link_to (@user) do %>
						<%= attachment_image_tag @user, :profile_image,  fallback: "no_image.jpg", size: "40x40" %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title %></td>
					<td><%= @book.body %></td>
					 <% if user_signed_in? && current_user.id == @book.user_id %>
					<td><%= link_to "Edit",edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
					<td><%= link_to "Destroy",book_path(@book.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book" %>
					<% end %>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="top">
          <br><P>CopyRight Infratop.inc</P></br>
        </div>

	</div>
</div>

